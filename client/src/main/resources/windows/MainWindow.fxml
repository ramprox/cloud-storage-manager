<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ContextMenu?>
<?import com.sun.javafx.scene.control.skin.ContextMenuContent.MenuBox?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.MenuButton?>
<?import com.sun.javafx.scene.control.skin.ContextMenuContent.ArrowMenuItem?>
<?import com.sun.javafx.scene.control.skin.ToolBarSkin.ToolBarOverflowMenu?>
<GridPane
        xmlns="http://javafx.com/javafx/8.0.112"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="client.controllers.MainWindowController"
        minWidth="800" minHeight="600">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>
    <MenuBar>
        <Menu mnemonicParsing="false" text="Соединение">
            <MenuItem fx:id="menuItemConnect" mnemonicParsing="false" text="Соединиться с сервером"
                      onAction="#connectClick"/>
            <MenuItem fx:id="menuItemDisconnect" disable="true" mnemonicParsing="false" text="Отсоединиться от сервера"
                      onAction="#disconnectClick"/>
        </Menu>
    </MenuBar>
    <SplitPane GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
        <VBox>
            <padding>
                <Insets top="2" bottom="2" left="3"/>
            </padding>
            <ComboBox fx:id="clientDrives" VBox.vgrow="NEVER" onAction="#clientDriveChanged">
                <VBox.margin>
                    <Insets top="2" bottom="2"/>
                </VBox.margin>
            </ComboBox>
            <HBox prefWidth="${clientTable.width}" prefHeight="${clientPath.height}"
                  style="-fx-border-width: 1; -fx-border-style: solid; -fx-border-radius: 3;">
                <VBox.margin>
                    <Insets top="2" bottom="2"/>
                </VBox.margin>
                <padding>
                    <Insets top="2" bottom="2" left="3" right="3"/>
                </padding>
                <Label fx:id="clientPath"/>
            </HBox>
            <TextField fx:id="searchClientFileName" HBox.hgrow="ALWAYS" onAction="#searchFileOnClient" promptText="Поиск...">
                <VBox.margin>
                    <Insets top="2" bottom="2"/>
                </VBox.margin>
            </TextField>
            <TableView fx:id="clientTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="clientFileName" text="Имя" minWidth="150" sortable="true"/>
                    <TableColumn fx:id="clientFileSize" text="Размер, Б" minWidth="150" sortable="true"/>
                    <TableColumn fx:id="clientFileDate" text="Дата изменения" minWidth="150" sortable="true"/>
                    <TableColumn fx:id="clientFileCreateDate" text="Дата создания" minWidth="150" sortable="true"/>
                </columns>
            </TableView>
        </VBox>
        <VBox>
            <padding>
                <Insets top="2" bottom="2" left="3"/>
            </padding>
            <Pane prefHeight="${clientDrives.height}">
                <VBox.margin>
                    <Insets top="2" bottom="2"/>
                </VBox.margin>
            </Pane>
            <HBox style="-fx-border-width: 1; -fx-border-style: solid; -fx-border-radius: 3;"
                  prefWidth="${serverTable.width}" prefHeight="${serverPath.height}">
                <VBox.margin>
                    <Insets top="2" bottom="2"/>
                </VBox.margin>
                <padding>
                    <Insets top="2" bottom="2" left="3" right="3"/>
                </padding>
                <Label fx:id="serverPath"/>
            </HBox>
            <TextField fx:id="searchServerFileName" HBox.hgrow="ALWAYS" onAction="#searchFileOnServer" promptText="Поиск...">
                <VBox.margin>
                    <Insets top="2" bottom="2"/>
                </VBox.margin>
            </TextField>
            <TableView fx:id="serverTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="serverFileName" text="Имя" minWidth="150" sortable="true"/>
                    <TableColumn fx:id="serverFileSize" text="Размер, Б" minWidth="150" sortable="true"/>
                    <TableColumn fx:id="serverFileDate" text="Дата изменения" minWidth="150" sortable="true"/>
                    <TableColumn fx:id="serverFileCreateDate" text="Дата создания" minWidth="150" sortable="true"/>
                </columns>
                <!--<contextMenu>
                    <ContextMenu fx:id="contextMenuServer">
                        <items>
                            <MenuItem text="Размер" onAction="#viewServerDirSize"/>
                        </items>
                    </ContextMenu>
                </contextMenu>-->
            </TableView>
        </VBox>
    </SplitPane>
    <GridPane GridPane.rowIndex="2" GridPane.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="20"/>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="20"/>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="20"/>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="20"/>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="20"/>
        </columnConstraints>
        <AnchorPane GridPane.columnIndex="0">
            <Button fx:id="newFile" text="Создать файл   Сtrl+N" onAction="#createFileClick"
                    AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0"
                    AnchorPane.topAnchor="0"/>
        </AnchorPane>
        <AnchorPane GridPane.columnIndex="1">
            <Button fx:id="newDir" text="Создать папку   Сtrl+D" onAction="#createDirClick"
                    AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0"
                    AnchorPane.topAnchor="0"/>
        </AnchorPane>
        <AnchorPane GridPane.columnIndex="2">
            <Button fx:id="rename" text="Переименовать   Сtrl+R" onAction="#renameFile"
                    AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0"
                    AnchorPane.topAnchor="0"/>
        </AnchorPane>
        <AnchorPane GridPane.columnIndex="3">
            <Button fx:id="copy" text="Копировать   F5" onAction="#copyClick"
                    AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0"
                    AnchorPane.topAnchor="0"/>
        </AnchorPane>
        <AnchorPane GridPane.columnIndex="4">
            <Button fx:id="delete" text="Удалить   Del" onAction="#deleteFile"
                    AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0"
                    AnchorPane.topAnchor="0"/>
        </AnchorPane>
    </GridPane>
</GridPane>
